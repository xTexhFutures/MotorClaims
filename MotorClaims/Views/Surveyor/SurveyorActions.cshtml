@using CORE.DTOs.MotorClaim.Claims;


@{
    Layout = null;
}
@model ClaimMaster

<form method="post" asp-action="UpdateClaimantActions" asp-controller="Surveyor">

    <input type="hidden" name="Id" value="@Model.claims.Id"/>
    <input type="hidden" id="hfSurveyorActions" name="hfSurveyorActions"/>

    <div class="slide-popup-inner">
        <div class="slide-header">
            <div class="heading-card">
                <h2 class="heading">Surveyor Actions</h2>
            </div>
        </div>
        <div class="slide-body">
            <div class="popup-body-wrapper">
                <div class="body-content-wrapper">
                    <div class="delete-content-card">
                        <div class="body-delete-header">
                            <h2 class="heading-title">@Model.claims.ClaimNo</h2>
                            <span class="active-employee">Employee</span>
                        </div>
                        <ul class="list-detail">
                            <li class="list-item-delete">
                                <span class="label">Owner Name:</span>
                                <span class="value">@Model.claims.Owner</span>
                            </li>
                            <li class="list-item-delete">
                                <span class="label">Policy No:</span>
                                <span class="value">@Model.claims.PolicyNo</span>
                            </li>
                            <li class="list-item-delete">
                                <span class="label">Plate No:</span>
                                <span class="value">@Model.claims.PlateNo</span>
                            </li>
                            <li class="list-item-delete">
                                <span class="label">Fraud Score:</span>
                                <span class="value">@Model.claims.FraudScore</span>
                            </li>
                        </ul>
                              <div class="cancel-declaration">
                            <h3 class="title-label">Claimant</h3>
                            <div class="form-field-wrapper">
                                <div class="form-input-wrapper">
                                    <select class="form-inputbox" required name="ClaimantId">
                                      <option value="@Model.claimants.Id">@Model.claimants.ClaimantName</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="cancel-declaration">
                            <h3 class="title-label">Action</h3>
                            <div class="form-field-wrapper">
                                <div class="form-input-wrapper">
                                    <select class="form-inputbox" required id="ddlSurveyorActions" name="SurveyorActions">
                                        <option value=""></option>
                                        <option value="1">Pending for Surveyor</option>
                                        <option value="2">Waiting estimations</option>
                                        <option value="3">Sent to service unit</option>
                                        <option value="4">Waiting Customer to deliver his vehicle</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="slide-footer">
                    <div class="slide-inner-footer">
                        <button type="button" class="button button-secondary-border"
                                onclick="CloseDialogV('SurveyorActions')">
                            Cancel
                        </button>
                        <button type="submit" class="button button-primary">Update</button>
                    </div>
                </div>
            </div>
        </div>


    </div>

</form>

<script>
    $(function(){
        $('#ddlSurveyorActions').on('change', function() {
 $('#hfSurveyorActions').val($( "#ddlSurveyorActions option:selected" ).text());
});
    });
</script>
