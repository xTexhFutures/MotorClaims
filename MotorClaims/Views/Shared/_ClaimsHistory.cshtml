@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Http.Features
@using System.Globalization

@inject IViewLocalizer _localizer
@using CORE.DTOs.MotorClaim.Claims;
@{
    Layout = null;
}

@model List<ClaimHistory>

<div class="basic-detail">
    <div class="policy-header">
        <div class="name-number-wrapper">
            <div class="policy-name-wrapper">
                <img src="/assets/icons/empty-file.svg" class="policy-icon" />
                <p class="policy-name">
                    @_localizer["DocumentsInfo"].Value
                    
                </p>
            </div>

        </div>

    </div>
    <div class="policy-detail-body undefined">
        <div class="inner-clild-wrap">
              @foreach (var clm in Model)
            {

            <ul class="detail-list">
                <li class="detailed-item false">
                    <span class="detailed-icon-wrap">
                        <img src="/assets/icons/save.svg" alt="" class="item-icon">
                    </span>
                    <div class="item-content">
                            <span class="label">
                                @_localizer["ClaimNumber"].Value
                                
                            </span>
                            <h3 class="value ellipsis"><a href="_app">@Helpers.FormatLongDate(clm.ChangeDate)</a></h3>
                    </div>
                </li>
                    <li class="detailed-item false">
                        <span class="detailed-icon-wrap">
                            <img src="/assets/icons/save.svg" alt="" class="item-icon">
                        </span>
                        <div class="item-content">
                            <span class="label">
                                @_localizer["ClaimNumber"].Value
                                
                            </span>
                            <h3 class="value ellipsis"><a href="_app">  @_localizer["clm.UserName"].Value </a></h3>
                        </div>
                    </li>
                    <li class="detailed-item false">
                        <span class="detailed-icon-wrap">
                            <img src="/assets/icons/save.svg" alt="" class="item-icon">
                        </span>
                        <div class="item-content">
                            <span class="label">
                                @_localizer["ClaimNumber"].Value
                                
                            </span>
                            <h3 class="value ellipsis">
                                <a href="_app">
                                    @_localizer["clm.Reason"].Value
                                    
                                </a>
                            </h3>
                        </div>
                    </li>
            </ul>
                            }
            
        </div>

    </div>
</div>


