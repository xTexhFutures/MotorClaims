@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Http.Features
@using System.Globalization
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@inject IViewLocalizer _localizer
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

            <div class="auth-inner-wrapper">
                <div class="auth-form-component">
                    <h2 class="auth-heading">Forgot Password</h2>
                    <form class="form-wrapper"  asp-controller="Authenticator">
                        <div class="form-field-wrapper">
                            <div class="form-input-wrapper">
                                <img src="~/assets/Content/Images/Mail.svg" class="icon" />
                    <input class="form-inputbox" id="txtUserName" name="UserName" autocomplete="off" type="text" maxlength="150" required />
                    <label class="form-label" for="txtEmail">@_localizer["ExUsername"].Value</label>
                             

                            </div>
                        </div>
                    
                        <div class="submit-button-wrapper">
                            <button class="button button-primary" type="submit" asp-action="Forget">RESET PASSWORD</button>

                        </div>

                    </form>
                    <div class="terms-wrapper">
                        <p class="term">Remember your Password? <a href="@Url.Action("Login", "Authenticator")" class="orange-link">@_localizer["Login"].Value</a></p>
                    </div>
                </div>
            </div>





 
                           