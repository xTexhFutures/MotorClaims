@using CORE.DTOs.MotorClaim;
@model ProductionInfo
@{
    Layout = null;
}

<div class="basic-detail">
    <div class="policy-header">
        <div class="name-number-wrapper">
            <div class="policy-name-wrapper">
                <img src="/assets/icons/empty-file.svg" class="policy-icon" />
                <p class="policy-name">Policy Info</p>
            </div>

        </div>
        <div class="action-dropdown">
            <h3 class="policy-no">@Model.PolicyNumber</h3>
        </div>
    </div>
    <div class="policy-detail-body undefined">
        <div class="inner-clild-wrap">
            <ul class="detail-list">
                <li class="detailed-item false">
                    <span class="detailed-icon-wrap">
                        <img src="/assets/icons/save.svg" alt="" class="item-icon">
                    </span>
                    <div class="item-content">
                        <span class="label">Policy Type</span>
                        <h3 class="value ellipsis">@Model.PolicyTypeName</h3>
                    </div>
                </li>
                <li class="detailed-item false">
                    <span class="detailed-icon-wrap">
                        <img src="/assets/icons/calendar.svg" alt="" class="item-icon">
                    </span>
                    <div class="item-content">
                        <span class="label">Effective Date</span>
                        <h3 class="value ellipsis">@HelpersDate.FormatDateNoTime(Model.PolicyEffectiveDate)</h3>
                    </div>
                </li>
                <li class="detailed-item false">
                    <span class="detailed-icon-wrap">
                        <img src="/assets/icons/calendar.svg" alt="" class="item-icon">
                    </span>
                    <div class="item-content">
                        <span class="label">Expiry Date</span>
                        <h3 class="value ellipsis">@HelpersDate.FormatDateNoTime(Model.PolicyExpiryDate)</h3>
                    </div>
                </li>

                <li class="detailed-item false">
                    <span class="detailed-icon-wrap">
                        <img src="/assets/icons/save.svg" alt="" class="item-icon">
                    </span>
                    <div class="item-content">
                        <span class="label">Owner Name</span>
                        <h3 class="value ellipsis">@Model.OwnerName</h3>
                    </div>
                </li>
            </ul>
        </div>
        <div style="background-color: white;min-height: 3px;"></div>
        <div class="inner-clild-wrap">
            <ul class="detail-list">

                <li class="detailed-item false">
                    <span class="detailed-icon-wrap">
                        <img src="/assets/icons/save.svg" alt="" class="item-icon">
                    </span>
                    <div class="item-content">
                        <span class="label">Leasee Id</span>
                        <h3 class="value ellipsis">@Model.LesseeId</h3>
                    </div>
                </li>


                <li class="detailed-item false">
                    <span class="detailed-icon-wrap">
                        <img src="/assets/icons/save.svg" alt="" class="item-icon">
                    </span>
                    <div class="item-content">
                        <span class="label">Leasee Name</span>
                        <h3 class="value ellipsis">@Model.LesseeName</h3>
                    </div>
                </li>
                <li class="detailed-item false">
                    <span class="detailed-icon-wrap">
                        <img src="/assets/icons/save.svg" alt="" class="item-icon">
                    </span>
                    <div class="item-content">
                        <span class="label">UW Year</span>
                        <h3 class="value ellipsis">@Model.PolicyUWYear</h3>
                    </div>
                </li>
                <li class="detailed-item false">
                    <span class="detailed-icon-wrap">
                        <img src="/assets/icons/save.svg" alt="" class="item-icon">
                    </span>
                    <div class="item-content">
                        <span class="label">Benificiary</span>
                        <h3 class="value ellipsis">@Model.BenefecieryName</h3>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
