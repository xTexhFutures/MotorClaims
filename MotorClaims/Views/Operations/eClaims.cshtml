@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Http.Features
@using System.Globalization

@inject IViewLocalizer _localizer
@using CORE.DTOs.APIs.MotorClaim;
@using CORE.DTOs.MotorClaim;
@using Newtonsoft.Json;
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@{
    eClaimsObj searchObj = (eClaimsObj)ViewData["searchObj"];
}
@model IPagedList<eClaims>

<div class="add-member-detail">
    <div class="policy-wrapper">
        <div class="basic-detail" style="background:none !important">
            <h2 class="heading">@_localizer["eClaims"].Value </h2>
            <div class="search-member">
                <form method="post" asp-action="SearcheClaims" asp-controller="Operations" style="display:flow-root">
                    <div class="search-filter-wrapper">
                        <div class="search-wrapper">
                            <span class="label">@_localizer["AccidentReport"].Value </span>
                            <div class="search-input-box-wrapper">

                                <div class="search-icon-wrapper">
                                    <img src="/assets/icons/empty-file.svg" class="search-icon" alt="">
                                </div>
                                <input type="text" class="input-box" autocomplete="off" maxlength="100" name="AccidentReport" placeholder="Search By Accident Report"
                                       value="@searchObj.AccidentReport">
                            </div>
                        </div>

                        <div class="search-wrapper">
                            <span class="label">@_localizer["Reference"].Value </span>
                            <div class="search-input-box-wrapper">

                                <div class="search-icon-wrapper">
                                    <img src="/assets/icons/empty-file.svg" class="search-icon" alt="">
                                </div>
                                <input type="text" class="input-box" autocomplete="off" id="txtReference" maxlength="100" name="Reference" placeholder="Search By Reference"
                                       value="@searchObj.Reference">
                            </div>
                        </div>

                        <div class="search-wrapper">
                            <span class="label">@_localizer["SequenceNumber"].Value </span>
                            <div class="search-input-box-wrapper">

                                <div class="search-icon-wrapper">
                                    <img src="/assets/icons/empty-file.svg" class="search-icon" alt="">
                                </div>
                                <input type="text" class="input-box" autocomplete="off" id="txtSequenceNumber" name="SequenceNumber" maxlength="100" placeholder="Search By Sequence Number"
                                       value="@searchObj.SequenceNumber">
                            </div>
                        </div>
                        <div class="search-wrapper">
                            <span class="label">@_localizer["TaqdeerNumber"].Value </span>
                            <div class="search-input-box-wrapper">

                                <div class="search-icon-wrapper">
                                    <img src="/assets/icons/empty-file.svg" class="search-icon" alt="">
                                </div>
                                <input type="text" class="input-box" autocomplete="off" maxlength="100" name="TaqdeerNumber" placeholder="Search By Taqdeer Number"
                                       value="@searchObj.TaqdeerNumber">
                            </div>
                        </div>
                    </div>

                    <div class="search-filter-wrapper">


                        <div class="search-wrapper">
                            <span class="label">@_localizer["OwnerNationalID"].Value </span>
                            <div class="search-input-box-wrapper">

                                <div class="search-icon-wrapper">
                                    <img src="/assets/icons/empty-file.svg" class="search-icon" alt="">
                                </div>
                                <input type="text" class="input-box" autocomplete="off" maxlength="40" name="OwnerNationalID" placeholder="Search By Owner National ID"
                                       value="@searchObj.OwnerNationalID">
                            </div>
                        </div>

                        <div class="search-wrapper">
                            <span class="label">@_localizer["Status"].Value </span>

                            <div class="search-input-box-wrapper">
                                <div class="search-icon-wrapper">
                                    <img src="/assets/icons/List.png" class="search-icon" alt="">
                                </div>
                                <select class="common-dropdown Full" id="ddlFilter" name="Status">
                                    <option value="">@_localizer["SelectStatus"].Value </option>
                                    <option value="1">@_localizer["Transfered"].Value </option>
                                    <option value="0">@_localizer["InvalidPolicyNumber"].Value </option>
                                    <option value="2">@_localizer["InvalidClaimant"].Value </option>
                                </select>
                            </div>
                        </div>

                        <div class="search-wrapper">
                            <span class="label">@_localizer["RegisteredFrom"].Value </span>
                            <div class="search-input-box-wrapper">

                                <div class="search-icon-wrapper">
                                    <img src="/assets/icons/calendar.svg" class="search-icon" alt="">
                                </div>
                                <input class="input-box" autocomplete="off" id="txtFrom" name="RegisteredFrom" type="text" value="@(searchObj.RegisteredFrom.HasValue?searchObj.RegisteredFrom.Value.ToString("dd-MM.yyyy"):"")">
                            </div>
                        </div>


                        <div class="search-wrapper">
                            <span class="label">@_localizer["RegisteredTo"].Value </span>
                            <div class="search-input-box-wrapper">

                                <div class="search-icon-wrapper">
                                    <img src="/assets/icons/calendar.svg" class="search-icon" alt="">
                                </div>
                                <input class="input-box" autocomplete="off" id="txtTo" name="RegisteredTo" type="text" value="@(searchObj.RegisteredTo.HasValue?searchObj.RegisteredTo.Value.ToString("dd-MM.yyyy"):"")">
                            </div>
                        </div>

                    </div>
                    <div class="search-heading-wrap" style="float: right;margin-top: 10px;">

                        <button class="button button-secondary" type="submit">@_localizer["Search"].Value </button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    @if (Model != null && Model.Count > 0)
    {
        <div class="policy-members">
            <div class="heading-card">
                <h2 class="heading">@_localizer["eClaimsResult"].Value </h2>
            </div>
            <div class="transaction-details">
                <table class="universal-table">
                    <tr>
                        <th>@_localizer["AccidentReport"].Value </th>
                        <th>@_localizer["SequenceNumber"].Value </th>
                        <th>@_localizer["TaqdeerNumber"].Value </th>
                        <th>@_localizer["OwnerNationalID"].Value </th>

                    </tr>


                    @foreach (var clm in Model)
                    {

                        <tr>
                            <td class="tran"><a href="">@clm.AccidentReport</a></td>

                            <td>@clm.SequenceNumber</td>
                            <td>@clm.TaqdeerNumber</td>
                            <td>@clm.OwnerNationalID</td>

                        </tr>


                    }
                </table>
                    @Html.PagedListPager((IPagedList)Model,Page=>Url.Action("Index","Managing",new {Page}))
                  Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount eClaims
            </div>
        </div>
    }
    else
    {
        <div class="ui-state-highlight ui-corner-all" style="background:none !important;margin-top: 1%;">
            <span class="ui-icon ui-icon-info" style="float: left"></span>
            <span>@_localizer["Noresultsfound"].Value .</span>
        </div>
    }
</div>
<div class="aside-right">
    <div class="inner-wrapper">
        <div class="vehicle-item">
            <div class="vehicle-header">
                <img src="/assets/motor/motor.svg" class="vehicle-icon" />
                <div class="vehicle-info">
                    <span class="vehicle-name">vehicle.Vehicle.MakeDesc vehicle.Vehicle.ModelDesc / vehicle.Vehicle.SequanceNo vehicle.Vehicle.CustomNo</span>
                    <span class="vehicle-no" style="text-transform:uppercase">@_localizer["PlateNumber:vehicle.Vehicle.PlateNo"].Value </span>
                </div>
            </div>
            <div class="vehicle-basic-body">
                <ul class="detail-list">
                    <li class="detailed-item">
                        <span class="detailed-icon-wrap">
                            <img src="/assets/icons/save.svg" alt="" class="item-icon">
                        </span>
                        <div class="item-content">
                            <span class="label">@_localizer["PolicyNo"].Value </span>
                            <h3 class="value">@_localizer["policy.policy.PolicyNumber"].Value </h3>
                        </div>
                    </li>
                    <li class="detailed-item">
                        <span class="detailed-icon-wrap">
                            <img src="/assets/icons/calendar.svg" alt="" class="item-icon">
                        </span>
                        <div class="item-content">
                            <span class="label">@_localizer["EffectiveDate"].Value </span>
                            <h3 class="value">HelpersDate.FormatDateNoTime(policy.policy.PolicyEffectiveDate)</h3>
                        </div>
                    </li>
                    <li class="detailed-item">
                        <span class="detailed-icon-wrap">
                            <img src="/assets/icons/calendar.svg" alt="" class="item-icon">
                        </span>
                        <div class="item-content">
                            <span class="label">@_localizer["YearofManufacturing"].Value </span>
                            <h3 class="value">@_localizer["vehicle.Vehicle.ManufactureYear"].Value </h3>
                        </div>
                    </li>
                    <li class="detailed-item">
                        <span class="detailed-icon-wrap">
                            <img src="/assets/icons/calendar.svg" alt="" class="item-icon">
                        </span>
                        <div class="item-content">
                            <span class="label">@_localizer["ExpiryDate"].Value </span>
                            <h3 class="value">HelpersDate.FormatDateNoTime(policy.policy.PolicyExpiryDate)</h3>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="common-slide-popup" id="UpdateReserve"></div>
<div class="common-slide-popup" id="UpdateRecovery"></div>
<div class="edit-member-id-popup" id="OperationAssign"></div>
<script>
    $('#txtFrom').ForceDateEntry();
    $('#txtTo').ForceDateEntry();
</script>